    <style name="MyBleTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:actionBarStyle">@style/MyBleTheme.ActionBar</item>
        <item name="android:actionMenuTextColor">@color/my_black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
       <!-- Override the color of UI controls -->
        <item name="colorAccent">@color/my_purple</item>
    </style>

    <style name="MyBleTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/MyBleTheme.ActionBar.Text</item>
    </style>

    <style name="MyBleTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colortext</item>
    </style>


    <style name="MyBleChatTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button">
            <item name="android:gravity">center_vertical|center_horizontal</item>
            <item name="android:textColor">#FFFFFFFF</item>
            <item name="android:shadowColor">#FF000000</item>
            <item name="android:shadowDx">0</item>
            <item name="android:shadowDy">-1</item>
            <item name="android:shadowRadius">0.2</item>
            <item name="android:textSize">16sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:background">@drawable/custom_button</item>
            <item name="android:focusable">true</item>
            <item name="android:clickable">true</item>
        </style>
    <!--<style name="MyTheme">

        <item name="android:rectback">@color/material_blue_grey_800</item>

    </style>-->


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomFloaterTextAppearance" parent="android:TextAppearance.Small">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:shadowColor">#FFFF0000</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">3</item>
    </style>

</resources>
